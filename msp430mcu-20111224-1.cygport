TOOLCHAIN_TARGET="msp430"
inherit toolchain

DESCRIPTION="MCU headers for MSP430 embedded toolchain"
HOMEPAGE="http://mspgcc.sourceforge.net/"
SRC_URI="mirror://sourceforge/mspgcc/${P}.tar.bz2"

src_compile() { :; }

src_install() {
	cd ${S}
	dodir /usr/bin
	MSP430MCU_ROOT=${S} \
	scripts/install.sh ${D}/usr
	sed -i -e "s|${D}||g" ${D}/usr/bin/${PN}-config
}
